<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.iot_ward_app_v3"
    tools:ignore="ExtraText">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo4"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo4"
        android:supportsRtl="true"
        android:theme= "@style/AppTheme.NoActionBar">

        //地圖展示(使用者第三頁)
        <activity
            android:name=".display_Map"
            android:exported="true"
            android:screenOrientation="portrait"/> //保持直的

        //環境預覽(使用者第二頁)
        <activity
            android:name=".Map"
            android:exported="true"
            android:screenOrientation="portrait"/>

        //管理者選單(管理者第一頁)
        <activity
            android:name=".adminster_page"
            android:exported="true"
            android:screenOrientation="portrait"/>

        //更改環境設定(管理者第二頁_其一)
        <activity
            android:name=".change_page__environment"
            android:exported="true"
            android:screenOrientation="portrait"/>

        //更改設備設定(管理者第二頁_其一)
        <activity
            android:name=".change_page__device"
            android:exported="true"
            android:screenOrientation="portrait"/>

        //搜尋頁面(使用者第一頁)
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>