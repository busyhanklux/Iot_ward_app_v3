                            tools:visibility="invisible" />

                        <TextView
                            android:id="@+id/space_CPD_1113"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.55" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/add_hint"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/add_hint_text"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:gravity="center"
                        android:text="需先使用「新增檢查」進行檢查\n成功後，「進行上傳」按鈕才會出現\n注意：如果編號在資料庫存在，則不顯示按鈕"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/space_CPD_12"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25" />

            </LinearLayout>

            <TextView
                android:id="@+id/CPD_add_change__"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="----------------------------------------"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/CPD_add_change"
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <LinearLayout
                android:id="@+id/linearLayout_CPD_change"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/space_CPD_21"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/change_CPD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="修改"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/space_CPD_221"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" />

                    <Spinner
                        android:id="@+id/sp_change_CPD_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="60dp"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <TextView
                        android:id="@+id/space_CPD_5"
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />

                    <EditText
                        android:id="@+id/ed_change_CPD_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="輸入欲更改之名稱"
                        android:inputType="text"
                        android:minHeight="60dp"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#FFFFFF"
                        android:textSize="24sp"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <TextView
                        android:id="@+id/space_CPD_4"
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/space_CPD_2221"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6" />

                        <Button
                            android:id="@+id/BT_change_CPD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.55"
                            android:text="確認修改內容" />

                        <TextView
                            android:id="@+id/space_CPD_2222"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6" />

                        <Button
                            android:id="@+id/BT_change_CPD_Decide"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.55"
                            android:text="套用至資料庫"
                            tools:visibility="invisible" />

                        <TextView
                            android:id="@+id/space_CPD_"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/space_CPD_222"
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />

                    <TextView
                        android:id="@+id/change_hint_text"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:gravity="center"
                        android:text="需先使用「確認修改內容」進行檢查\n成功後，「套用置資料庫」按鈕才會出現\n注意：如果是改編號，請先刪除該號"
