<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"></LinearLayout>

    <ImageView
        android:id="@+id/imgTitle"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:srcCompat="@drawable/logo2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"></LinearLayout>

    <TextView
        android:id="@+id/tvID"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="查詢選擇(上為設備編號，下為環境選擇)"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spID"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:visibility="gone"
        tools:ignore="SpeakableTextPresentCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/Input_major"
                android:layout_width="30dp"
                android:layout_height="48dp"
                android:ems="10"
                android:hint="1~17"
                android:inputType="number"
                android:textDirection="ltr"
                android:visibility="gone"
                tools:visibility="gone" />

            <Spinner
                android:id="@+id/beacon_id_spinner"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_weight="0.25"
                android:backgroundTint="#FFFFFF"
                android:foregroundTint="#FFFFFF"
                android:textColor="#FFFFFF"
                tools:ignore="SpeakableTextPresentCheck" />

            <Spinner
                android:id="@+id/environment_choice"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_weight="0.25"
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/find_major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:layoutDirection="rtl"
                android:text="查找"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="設備編號資訊"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/equipment_information_tv"
        android:layout_width="match_parent"
        android:layout_height="40dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/sp_esp32_choice"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_weight="0.25"
            android:layoutDirection="ltr"
            android:visibility="visible"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tvrssi_1"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:visibility="gone"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/tvrssi_2"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:visibility="gone"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/tvrssi_3"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:visibility="gone"
            tools:visibility="gone" />

        <Button
            android:id="@+id/esp32_switch"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layoutDirection="rtl"
            android:text="切換esp32"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/sw_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/number_decided"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/sw_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/sw_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/sw_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:visibility="gone"
            tools:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="gone">

        <TextView
            android:id="@+id/distance_1"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="0.25"
            android:visibility="gone"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/distance_2"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="0.25"
            android:visibility="gone"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/distance_3"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="0.25"
            android:visibility="gone"
            tools:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/detail"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:scrollbars="none"
            android:text="請先輸入要查詢的beacon編號"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textDirection="ltr"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="gone">

            <TextView
                android:id="@+id/tvmajor1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:visibility="invisible"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/tvmajor2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:visibility="invisible"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/tvmajor3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:visibility="invisible"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/tvminor1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:visibility="invisible"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/tvminor2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:visibility="invisible"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/tvminor3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:visibility="invisible"
                tools:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:orientation="vertical"
            android:visibility="invisible"
            tools:visibility="gone">

            <TextView
                android:id="@+id/time_check_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/time_check_2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:visibility="gone"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/time_check_3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:visibility="gone"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/time_1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:visibility="gone"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/time_2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:visibility="gone"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/time_3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                tools:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/conclude"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="文字說明"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="開啟地圖"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:id="@+id/invisible_rssi_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="invisible"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/invisible_rssi_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/invisible_rssi_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="invisible"
        tools:visibility="gone" />
    >

</LinearLayout>