<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imgTitle"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:srcCompat="@drawable/hospital" />

    <TextView
        android:id="@+id/tvID"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="@string/Equ_num"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spID"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="@string/equ_inform"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/equipment_information_tv"
        android:layout_width="match_parent"
        android:layout_height="40dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/sp_esp32_choice"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_weight="0.25"
            android:layoutDirection="ltr"
            android:visibility="visible"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tvrssi_1"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:visibility="gone"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/tvrssi_2"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:visibility="gone"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/tvrssi_3"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:visibility="gone"
            tools:visibility="gone" />

        <Button
            android:id="@+id/esp32_switch"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:layoutDirection="rtl"
            android:text="切換esp32"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/sw_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/sw_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/sw_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:visibility="gone"
            tools:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="invisible"
        tools:visibility="gone">

        <TextView
            android:id="@+id/distance_1"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="0.25"
            android:visibility="invisible"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/distance_2"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="0.25"
            android:visibility="invisible"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/distance_3"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="0.25"
            android:visibility="invisible"
            tools:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/detail"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:scrollbars="none"
            android:text="請先選擇要查詢的beacon"
            android:textAlignment="center"
            android:textDirection="ltr"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:orientation="vertical"
            android:visibility="invisible"
            tools:visibility="gone">

            <TextView
                android:id="@+id/tvmajor1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0.15"
                android:visibility="invisible"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/tvminor1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0.15"
                android:visibility="invisible"
                tools:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:orientation="vertical"
            android:visibility="invisible"
            tools:visibility="gone">

            <TextView
                android:id="@+id/time_1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:visibility="invisible"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/time_2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:visibility="invisible"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/time_3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:visibility="invisible"
                tools:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/conclude"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:insetLeft="80dp"
            android:text="@string/swt" />

        <Button
            android:id="@+id/btMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:insetLeft="140dp"
            android:text="@string/map" />
    </LinearLayout>

    <TextView
        android:id="@+id/invisible_rssi_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="invisible"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/invisible_rssi_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/invisible_rssi_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="invisible"
        tools:visibility="gone" />
    >

</LinearLayout>